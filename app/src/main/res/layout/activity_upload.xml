<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/upload3"
    tools:context=".UploadActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="355dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="290dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/cyan_border"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:id="@+id/uploadImage"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/upload4" />

        <ProgressBar
            android:id="@+id/ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:indeterminateTint="@color/dark_cyan"
            android:visibility="invisible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="95dp"
            android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/uploadCaption"
            android:layout_weight="0.6"
            android:background="@drawable/cyan_border"
            android:padding="16dp"
            android:hint="Add caption..."/>
            
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/uploadButton"
            android:layout_marginStart="10dp"
            android:backgroundTint="@color/dark_cyan"
            android:src="@drawable/baseline_arrow_circle_up_24"
            app:tint = "@color/white"/>



        </LinearLayout>

    </LinearLayout>

</LinearLayout>